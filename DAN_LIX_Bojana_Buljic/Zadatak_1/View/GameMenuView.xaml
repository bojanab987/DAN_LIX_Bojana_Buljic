                    <ControlTemplate>
                        <Border Style="{StaticResource SlideBorder}"
                                BorderBrush="{Binding BorderBrush}">
                            <Image Stretch="Fill"
                                   Source="{Binding SlideImage}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!-- Column 2(from left)-->
