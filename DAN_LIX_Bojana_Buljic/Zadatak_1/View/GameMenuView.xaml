                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!-- Column 3(End Right) -->
            <Button Grid.Row="0"
                    Grid.Column="3"
                    IsEnabled="{Binding isSelectable}"
                    DataContext="{Binding MemorySlides[12]}"
                    Click="Slide_Clicked">
