                                BorderBrush="{Binding BorderBrush}">
                            <Image Stretch="Fill"
                                   Source="{Binding SlideImage}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Row="3"
                    Grid.Column="3"
                    IsEnabled="{Binding isSelectable}"
                    DataContext="{Binding MemorySlides[15]}"
                    Click="Slide_Clicked">
                <Button.Template>
                    <ControlTemplate>
                        <Border Style="{StaticResource SlideBorder}"
                                BorderBrush="{Binding BorderBrush}">
                            <Image Stretch="Fill"
                                   Source="{Binding SlideImage}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </DockPanel>
</UserControl>
